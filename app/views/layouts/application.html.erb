<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tag %>
</head>
<%= stylesheet_link_tag "application.css" %>
<body>
<%if signed_in? %>
<div class ="top"></div>
<p> <%= link_to "History", searches_path%> </p>

  <div class="search_field">
    <%= form_tag(search_action_path, method: "get") do %>
      <%= label_tag(:q, "Search Artist:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>
  </div>
<%end %>

<%if signed_in? %>
<div id="header">
  <% if signed_in? -%>
    <%= button_to t(".sign_out"), sign_out_path, method: :delete %>
  <% else -%>
    <%= link_to t(".sign_in"), sign_in_path %>
  <% end -%>
</div>
<%end %>


<div id="flash">
  <% flash.each do |key, value| -%>
    <div id="flash_<%= key %>"><%=h value %></div>
  <% end %>
</div>





<%= yield %>
</body>
</html>
